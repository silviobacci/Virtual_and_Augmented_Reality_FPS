function OnDraw() {
	my_mouse.draw();
	
	if(my_startup_menu.show_menu) {
		my_startup_menu.draw();
		return;
	}
	
	if(my_waiting_menu.show_menu) {
		my_waiting_menu.draw();
		return;
	}
	
	my_world.draw();
	my_players.draw();
	foreach(var bullet in enemy_bullets)
		bullet[0].draw();
	
	if(my_pause_menu.show_menu) {
		my_pause_menu.draw();
		return;
	}
	
	my_gunsight.draw();
	my_map.draw();
	my_player_info.draw();
	my_score_info.draw();
}
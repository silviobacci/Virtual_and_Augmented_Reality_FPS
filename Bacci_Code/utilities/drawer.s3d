function OnDraw() {
	if(my_startup_menu.show_menu) {
		ShowCursor(true);
		my_startup_menu.draw();
		return;
	}
	
	my_world.draw();
	my_players.draw();
	
	if(my_pause_menu.show_menu) {
		ShowCursor(true);
		my_pause_menu.draw();
		return;
	}
	
	ShowCursor(false);
	my_map.draw();
	my_player_info.draw();
	my_score_info.draw();
}
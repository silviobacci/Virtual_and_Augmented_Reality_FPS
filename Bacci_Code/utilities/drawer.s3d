function OnDraw() {
	if(my_startup_menu.show_menu) {
		my_mouse.set_visible();
		my_startup_menu.draw();
		return;
	}
	
	my_world.draw();
	my_players.draw();
	
	if(my_pause_menu.show_menu) {
		my_mouse.set_visible();
		my_pause_menu.draw();
		return;
	}
	
	my_mouse.set_invisible();
	my_map.draw();
	my_player_info.draw();
	my_score_info.draw();
	my_gunsight.draw();
}
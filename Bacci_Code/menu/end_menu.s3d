var my_end_menu;

class end_menu{
	var deadbox;
	
	var show_menu;
	
	var winner;
	
	init();
	update();
	draw();
	
	// utility functions
	check_mouse_position();
};

function end_menu::init() {
	deadbox = create_box(0.5, 0.5, 0.1, 0.05);
	show_menu = false;
}

function end_menu::draw() {
	draw_background([0, 1, 1, 1]);
	if(show_menu)
		draw_text("WINNER", deadbox, 0);	
	else
		draw_text("LOSER", deadbox, 0);	
	
	ConsoleFinish();
}